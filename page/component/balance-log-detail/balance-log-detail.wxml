<view class="container">
  <block wx:if="{{refType == 'BT060'}}">
    <view class="order">
      <view>订单号:{{balanceDetail.id}}</view>
      <view>下单时间:{{balanceDetail.addtime}}</view>
      <view>
        <view>
          <text> {{balanceDetail.contactPeople}}</text> 
          <text> {{balanceDetail.contactPhone}}</text>  
          <text> {{balanceDetail.distance}}km</text> 
        </view>
        <view>
          <text>{{balanceDetail.deliveryAddress}}</text> 
        </view>
      </view>

      <view wx:for="{{balanceDetail.deliverOrderItemList}}" wx:key="item.id" wx:for-item="item">
        <view>
          <image style="width: 80rpx; height: 80rpx;" src="{{item.pictureUrl}}" />
          {{item.name}}
        </view>
        <view>
          {{item.quantityUnitName}}
        </view>
        <view>
          数量x<text>{{item.quantity}}</text>  
        </view>
      </view>
      <view>
        订单金额<text>{{balanceDetail.amount}}元</text>  
      </view>
    </view>
  </block>

  <block wx:else>
    <view>
      <view><text>账单信息</text></view>
      <view>流水号：{{balanceDetail.id}}</view>
      <view>类型：{{balanceDetail.refTypeName}}</view>
      <view>金额：{{balanceDetail.amount}}</view>
      <view>时间：{{balanceDetail.addtime}}</view>
    </view>
  </block>
</view>

