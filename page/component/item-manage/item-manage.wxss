/* page/component/item-manage/item-manage.wxss */
@import '../../common/common.wxss';

.ui-tab {
    position: fixed;
    left: 0;
    width: 100%;
    height: 42px;
    background-color: #fff;
    z-index: 99;
    box-shadow: 0 0 10px #ccc;
    display: -webkit-box !important;
}

.ui-col {
    -webkit-box-flex: 1;
}

.ui-tab .ui-col .active {
    border-bottom: 2px solid #05C0AB;
    color: #05C0AB;
}

.ui-tab .ui-col .ui-title {
    display: block;
    width: 100px;
    height: 42px;
    margin: auto;
    font-size: 16px;
    color: #333;
    display: -webkit-box !important;
    -webkit-box-align: center;
    -webkit-box-pack: center;
}

.newOrders{
  padding-top: 120rpx;
}

.batch-btn {
  position: fixed;
  bottom: 20rpx;
}