/* page/component/item-manage/item-manage.wxss */
@import '../../common/common.wxss';

.tab{
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 88rpx;
  background-color: #fff;
  z-index: 999;
  box-shadow: 0 0 10px #ddd;
}

.tab-con{
  position: relative;
  width: 100%;
  height: 100%;
}

.tab-con .flex-row{
  max-width: 33.33%;
  min-width: 33.33%;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  font-size: 28rpx;
}

.tab-con .flex-row.active{
  color: #05C0AB;
  border-bottom: 2px solid #05C0AB;
}

.box{
  padding-top: 100rpx;
  padding-bottom: 220rpx;
}

.box .header{
  position: relative;
  height: 100rpx;
  background-color: #fff;
  padding: 0rpx 24rpx;
}

.box .header .right{
  max-width: 90rpx;
  min-width: 90rpx;
  line-height: 100rpx;
  text-align: right;
}

.box .header .left{
  position: relative;
  height: 60rpx;
  margin-top: 20rpx;
  background-color: #e8e8e8;
   border-radius:30rpx;  
}

.box .header .left input{
  width: 100%;
  height: 60rpx;
  padding: 0 80rpx;
  font-size: 26rpx;
}

.box .header .left .icon{
  position: absolute;
  left: 30rpx;
  top: 14rpx;
  width: 32rpx;
  height: 32rpx;
}

.list .item{
  margin-bottom: 10px;
  background-color: #fff;
}

.list .item .main{
  position: relative;
  padding: 24rpx;
}

.list .item .main .left{
   max-width: 160rpx;
   min-width: 160rpx;
   height: 160rpx;
   border: 1px solid #eee;
}

.list .item .main .right{
  position: relative;
  height: 160rpx;
  margin-left: 20rpx;
  padding-top: 20rpx;
}

.list .item .main .right .name{
   overflow : hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  line-height: 40rpx;
  max-height: 80rpx;
  font-size: 28rpx;
}

.list .item .main .right .bottom{
  position: absolute;
  left: 0;
  bottom: 20rpx;
  width: 100%;
}

.list .item .main .right .bottom .row{
  float: left;
  height: 32rpx;
  line-height: 32rpx;
  color: #999;
  font-size: 24rpx;
}

.list .item .main .right .bottom .row:last-child{
  padding-left: 40rpx;
}

.list .item .btns{
  padding: 20rpx 24rpx;
  background-color: #fff;
  text-align: right;
}

.list .item .btns view{
  display: inline-block;
  height: 52rpx;
  width: 120rpx;
  line-height: 52rpx;
  text-align: center;
  font-size: 28rpx;
  border: 1px solid #b7b7b7;
  margin-left: 20rpx;
}

.footer{
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 204rpx;
  background-color: #f6f6f6;
  z-index: 999;
  box-shadow: 0 0 10px #ddd;
}

.footer .btns{
  padding: 20rpx 40rpx;
}

.footer .btns view{
  height: 68rpx;
  border: 1px solid #fe9900;
  line-height: 68rpx;
  text-align: center;
  font-size: 30rpx;
  border-radius: 4px;
}

.footer .btns view:first-child{
  background-color: #fe9900;
  color: #fff;
  margin-right: 10rpx;
}

.footer .btns view:last-child{
  color: #fe9900;
  margin-left: 10rpx;
}

.footer .del{
  margin: 0 40rpx;
  height: 68rpx;
  line-height: 68rpx;
  text-align: center;
  font-size: 30rpx;
  border: 1px solid #fe9900;
  background-color: #fe9900;
  color: #fff;
  border-radius: 4px;
}

