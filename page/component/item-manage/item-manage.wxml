<!--page/component/item-manage/item-manage.wxml-->
<view class='container'>
  <view style='height:80rpx;'>
    这里是查询模块
  </view>
  <view class="ui-tab">
    <view class="ui-col">
        <view class="ui-title {{currentTab==0 ? 'active' : ''}}" data-current="0" bindtap="switchTab">全部</view>
    </view>
    <view class="ui-col">
        <view class="ui-title {{currentTab==1 ? 'active' : ''}}" data-current="1" bindtap="switchTab">已上架</view>
    </view>
    <view class="ui-col">
        <view class="ui-title {{currentTab==2 ? 'active' : ''}}" data-current="2" bindtap="switchTab">已下架</view>
    </view>
  </view>

  <view class="items">
    <view wx:for="{{items}}" wx:key="id" wx:for-item="item">
      <view>
        <image style="width: 80rpx; height: 80rpx;" src="{{item.url}}" />
        {{item.name}}
      </view>
      <view>
        {{item.quantityUnitName}}
      </view>
      <view>
        库存：<text>{{item.quantity}}</text>  
      </view>

      <view>
        
          <button size='mini' type="default" plain="true" data-item-id="{{item.id}}" data-item-name="{{item.name}}" data-index="{{index}}" bindtap='online' wx:if="{{currentTab == 0 || currentTab == 2}}">上架</button> 
        
        
          <button size='mini' type="default" plain="true" data-item-id="{{item.id}}" data-item-name="{{item.name}}"  data-index="{{index}}" bindtap='offline' wx:if="{{currentTab == 0 || currentTab == 1}}">下架</button>
       
          <button size='mini' type="default" plain="true" data-item-id="{{item.id}}" data-item-name="{{item.name}}" data-index="{{index}}" data-quantity="{{item.quantity}}" bindtap='showModal' wx:if="{{currentTab == 1}}">库存</button>

          <button size='mini' type="default" plain="true" data-item-id="{{item.id}}" data-item-name="{{item.name}}"  data-index="{{index}}" bindtap='del' wx:if="{{currentTab == 2}}">删除</button>
      </view>
    </view>
  </view>

  <view class="batch-btn">
    <button size='mini' type="primary" bindtap='batchUp'>批量上架</button> 
    <button size='mini' type="default" plain="true" bindtap='batchDown'>批量下架</button>
    <button size='default' type="primary" bindtap='batchDel'>批量删除</button>
  </view>

  <view class="commodity_screen" bindtap="hideModal" wx:if="{{showModalStatus}}"></view>
  <view animation="{{animationData}}" class="commodity_attr_box" wx:if="{{showModalStatus}}">
      <view class="form">
        <view class="form-group list-line">
          <input type="number" value="{{quantity}}" maxlength="8" class='form-control' placeholder='请输入库存' bindinput="setQuantity"></input>
        </view>
      </view>
      <view class="btn-reg">
        <button type="default" plain="true" disabled="{{confirmBtn.disabled}}" loading="{{confirmBtn.loading}}" bindtap='updateQuantity'>确认</button>
      </view>
  </view>
</view>
