/* page/component/shop-auth/shop-auth.wxss */
@import '../../common/common.wxss';

.shop-item {
  margin-top: 20rpx;
  height: 60rpx;
  line-height: 60rpx;
}

.ui-footer {
  position: absolute;
  text-align: center;
  bottom: 50rpx;
}

.list {
  position: relative;
  margin-top: 10px;
  background-color: #fff;
}

.list .list-line-bl {
    position: relative;
    color: #333;
    height: 80rpx;
    line-height: 80rpx;
}

.list-line-bl:before {
    content: " ";
    position: absolute;
    left: 0;
    top: 0;
    right: 0;
    height: 1px;
    border-top: 1px solid #D9D9D9;
    color: #D9D9D9;
    -webkit-transform-origin: 0 0;
    transform-origin: 0 0;
    -webkit-transform: scaleY(0.5);
    transform: scaleY(0.5);
    left: 12px;
}

.list .icon {
    position: absolute;
    right: 12px;
    top: 10px;
    width: 100px;
}
