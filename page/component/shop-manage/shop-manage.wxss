/* page/component/shop-manage/shop-manage.wxss */
@import '../../common/common.wxss';

.header{
  position: relative;
  margin-bottom: 10px
}

.header .header-bar{
  height: 160rpx;
  background-color: #05C0AB;
}

.header .header-bar .online{
   position: absolute;
   right: 20rpx;
   top: 84rpx;
}

.header .header-bottom{
  position: relative;
  height: 180rpx;
  padding: 0 40rpx;
  background-color: #fff;
}

.header .header-bottom .left{
  padding-top: 36rpx;
  max-width: 200rpx;
  min-width: 200rpx;
}

.header .header-bottom .left .h3{
  font-size: 48rpx;
  color: #333;
  text-align: center
}

.header .header-bottom .left .p{
  text-align:center;
  font-size: 28rpx;
  color: #999;
}

.header .header-bottom .center{
  position: relative;
}

.header .header-bottom .center .top{
  width: 160rpx;
  height: 160rpx;
  margin: -80rpx auto 0rpx auto;
  border-radius: 50%;
  overflow:hidden; 
}

.header .header-bottom .center .top image{
  width: 100%;
  height: 100%
}

.header .header-bottom .center .name{
  text-align: center;
  margin-top: 10rpx;
  font-size: 26rpx;
  line-height: 32rpx;
  max-height: 64rpx;
  overflow : hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  height: 64rpx;
  padding : 0 20rpx;
  word-break: break-all;
}

.box{
  position: relative;
  border-top:1px solid #D9D9D9; 
  background-color: #fff;
}

.box:last-child{
  border-bottom:1px solid #D9D9D9; 
}

.box .flex-row{
  max-width: 25vw;
  min-width: 25vw;
  height: 21vw;
  padding-top: 3vw;
  overflow: hidden;
}

.box .flex-row:first-child{
  /* border-right:1px solid #D9D9D9;   */
}

.box .flex-row{
  border-left:1px solid #D9D9D9;  
}

.box .flex-row .icon{
  width: 12vw;
  height: 12vw;
  margin: auto;
}

.box .flex-row .icon image{
  width: 100%;
  height: 100%;
}

.box .flex-row .label{
  text-align: center;
  padding-top: 10rpx;
  color: #666;
  font-size: 28rpx;
}

.commodity_screen {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.2;
  overflow: hidden;
  z-index: 1000;
  color: #fff;
}

.commodity_attr_box {
  width: 100%;
  overflow: hidden;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 2000;
  background: #fff;
  padding: 20rpx;
}

.form-group {
    position: relative;
    height: 100rpx;
}

.form-group input{
  width: 100%;
}

.form-group .btns{
  max-width: 200rpx;
  min-width: 200rpx;
  text-align: right;
}

.form-group input{
  height: 100rpx;
}

.btn-reg {
  margin: 60rpx 80rpx 0 40rpx;
  border-radius: 4px;
}
.btn-reg button:last-child{
  margin-top: 20rpx;
}

button[plain]::after {
  border-width:1px;
}
